<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:padding="8dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/fotoku"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Aria Dwika Wicaksana"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="A11.2020.12607"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="Aplikasi Penjualan"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:clickable="true"
                android:onClick="EntryButt"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/border2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/clipboard"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>
                    <TextView
                        android:text="Input Data"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="0dp"></View>
            <LinearLayout
                android:clickable="true"
                android:onClick="TampilButt"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/border2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/folder"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>
                    <TextView
                        android:text="Stock Barang"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:clickable="true"
                android:onClick="TransButt"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/border2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/palette"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>
                    <TextView
                        android:text="Transaksi"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="0dp"></View>
            <LinearLayout
                android:clickable="true"
                android:onClick="LaporanButt"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/border2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/folder2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>
                    <TextView
                        android:text="Laporan"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:clickable="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:onClick="TentangButt"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/border2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/plus"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>
                    <TextView
                        android:text="Tentang"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="0dp"></View>
            <LinearLayout
                android:clickable="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/border2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/exit1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>
                    <TextView
                        android:text="Keluar"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="Fakultas Ilmu Komputer"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="TEKNIK INFORMATIKA"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>