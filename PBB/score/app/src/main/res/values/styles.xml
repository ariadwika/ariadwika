<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/design_default_color_secondary</item>
    </style>
    <style name="ScoreButtons" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/button_backgroud</item>
        <item name="android:color">@color/design_default_color_primary</item>
    </style>
    <style name="PlusButtons" parent="Widget.AppCompat.ActionButton">
        <item name="android:src">@drawable/ic_plus</item>
        <item name="contentDescription">Plus Button</item>
    </style>
    <style name="MinusButtons" parent="Widget.AppCompat.ActionButton">
        <item name="android:src">@drawable/ic_minus</item>
        <item name="contentDescription">Minus Button</item>
    </style>

    <style name="ScoreText">
        <item name="android:textSize">24sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>
</resources>